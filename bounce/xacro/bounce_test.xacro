    <plugin filename="gz-sim-scene-broadcaster-system" name="gz::sim::systems::SceneBroadcaster" />

    <xacro:include filename="balls.xacro" />
    <xacro:include filename="world_components.xacro" />

    <xacro:ground_plane/>
